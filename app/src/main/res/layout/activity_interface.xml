<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="界面"/>
    <Button
        android:id="@+id/bt_ui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="使用UI控件类创建View对象" />

    <Button
        android:id="@+id/bt_LayoutInflater"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="使用LayoutInflater类创建View对象" />

    <Button
        android:id="@+id/bt_add_remove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="对界面动态增加与删除View" />
    <Button
        android:id="@+id/bt_example"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="界面——View深入(例子)" />

    <Button
        android:id="@+id/bt_example1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="动态加载布局（项目中效果）" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Android四大组件之Activity跳转" />

    <Button
        android:id="@+id/bt_intent1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示意图"/>
    <Button
        android:id="@+id/bt_intent2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="隐式意图"/>
    <Button
        android:id="@+id/bt_jump1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activity简单跳转" />

    <Button
        android:id="@+id/bt_jump2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activity带值跳转" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activity跳转时界面切换动画" />

    <Button
        android:id="@+id/bt_alpha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="alpha动画" />
    <Button
        android:id="@+id/bt_translate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="translate动画" />
    <Button
        android:id="@+id/bt_scale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="scale动画" />
    <Button
        android:id="@+id/bt_rotate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="rotate动画" />
</LinearLayout>